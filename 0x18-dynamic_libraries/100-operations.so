#include <stdio.h>

/* Add two integers */
int add(int a, int b)
{
    return a + b;
}

/* Subtract two integers */
int sub(int a, int b)
{
    return a - b;
}

/* Multiply two integers */
int mul(int a, int b)
{
    return a * b;
}

/* Divide two integers */
int div(int a, int b)
{
    if (b == 0)
    {
        fprintf(stderr, "Error: Division by zero\n");
        return (0);
    }
    return a / b;
}

/* Modulo operation */
int mod(int a, int b)
{
    if (b == 0)
    {
        fprintf(stderr, "Error: Modulo by zero\n");
        return (0);
    }
    return a % b;
}
